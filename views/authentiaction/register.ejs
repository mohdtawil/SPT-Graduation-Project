<%- include("../../patials/header/firstHeader.ejs") %>
<title>SPT | Register</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<%- include("../../patials/header/styleHeader.ejs") %>
<%- include("../../patials/header/endHeader.ejs") %>
<%- include("../../patials/header/navHeader.ejs") %>
<section id="Title">
    <div class="container">
        <div class="row">
            <div class="col-12 mt-3">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-7 col-sm-8 col-9 text-center">
                        <p class="title">Parent Registeration</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="Form">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-7 col-11 mt-5">
                <div class="formContainer p-4 pb-2 mb-5" style=" background-color:rgb(128, 179, 209)">
                    <form action="/register" method="POST">
                        <div class="row">
                            <div class="col-12 ">
                                <div class="h3 text-light">Parent Information For Login</div>
                            </div>
                        </div>
                        <label for="" style="color: #2d4c5e;" class="formLabel"><i class="material-icons">perm_identity </i> Full Name</label>
                        <input type="text" name="name" placeholder="" class="formInput">
                        <label for="" style="color: #2d4c5e;" class="formLabel mt-3"><i class="material-icons">picture_in_picture </i> SSN</label>
                        <input type="number" name="ssn" placeholder="" class="formInput">
                        <label for="" style="color: #2d4c5e;" class="formLabel mt-3"><i class="material-icons">settings_phone </i> Phone Number</label>
                        <input type="text" name="phone" placeholder="" class="formInput">

               
                        <div class="row" style="background-color: #2d4c5e; margin-top: 2em;">
                            <div class="col-12 my-3 ">
                               
                            </div>
                        </div>

                    <hr>
                        <div class="row">
                            <div class="col-12 ">
                                <div class="h3 text-light">Parent Personal Information</div>
                            </div>
                        </div>
                        <label for="" style="color: #2d4c5e;" class="formLabel"><i class="material-icons">account_circle </i> User Name</label>
                        <input type="text" name="username" placeholder="" class="formInput">
                        <label for="" style="color: #2d4c5e;" class="formLabel mt-3"><i class="material-icons">lock </i> Password</label>
                        <input type="password" name="password" placeholder="" class="formInput">
           
                        <div class="row" style="background-color: #2d4c5e; margin-top: 2em;">
                            <div class="col-12 my-3 ">
                               
                            </div>
                        </div>

                    <hr>
                        <div class="row">
                            <div class="col-12 ">
                                <div class="h3 mb-3 text-light">Your Students SSNs</div>
                            </div>
                        </div>
                  
                        <label for="" style="color: #2d4c5e;" class="formLabel"><i class="material-icons">picture_in_picture </i> Student 1 SSN</label>
                        <input type="text" name="ssn1" placeholder="" class="formInput">
                        <label for="" style="color: #2d4c5e;" class="formLabel mt-3"><i class="material-icons">picture_in_picture </i> Student 2 SSN</label>
                        <input type="text" name="ssn2" placeholder="" class="formInput">
                        <label for="" style="color: #2d4c5e;" class="formLabel mt-3"><i class="material-icons">picture_in_picture </i> Student 3 SSN</label>
                        <input type="text" name="ssn3" placeholder="" class="formInput">
                        
                        <div class="d-flex  mt-3 justify-content-start mt-4">
                            <button class="formButton" style="background-color: #286385;">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



