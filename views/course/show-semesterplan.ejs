<%- include("../../patials/header/firstHeader.ejs") %>
<title>SPT | View Semster Plan</title>
<%- include("../../patials/header/styleHeader.ejs") %>
<%- include("../../patials/header/endHeader.ejs") %>
<%- include("../../patials/header/navHeader.ejs") %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <section id="User">
        <div class="conatiner">
            <div class="row m-0 justify-content-end">
                <div class="col-xl-3 col-lg-4 col-md-4 col-sm-5 col-7 px-xl-4 px-lg-3 px-md-2 mt-md-1 mt-2">
                    <a href="/view/course/<%= singleCourse._id %>" >
                        <div class="user p-1">
                            <div class="userContainer">
                                <div class="img m-0">
                                    <i class="material-icons" style="font-size:36px">cancel</i>

                                </div>
                                <div class="text">
                                    <p class="userName d-inline">Back To <%= singleCourse.name %> Course</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <br><br>
    <section id="Title">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="row justify-content-center">
                        <div class="col-md-9  text-center">
                            <p class="title">View Semester Plan For <%= singleCourse.name %> Course</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="View">
        <div class="container">
            <div class="row m-0">
                <div class="col-12 mt-5" style="background-color:#395060">
                    <div class="row justify-content-center">
                        <% singleCourse.SemesterPlan.forEach(function(Plan) { %>
                            <div class="col-lg-9">
                               <p class="viewLabel " style="font-size: 1.2em;">Course Name: <span style="color: #23689b; font-size: 0.9em"><%= Plan.CourseName %></span> </p>
                               <p class="viewLabel " style="font-size: 1.2em;">Teacher Name: <span style="color: #23689b; font-size: 0.9em"><%= Plan.TeacherName %></span> </p>
                               
                               <p class="viewLabel " style="font-size: 1.2em;">General Outcomes List:</p>
                               <% var GOL=0; %>
                               <% Plan.GeneralOutcomesList.forEach(function(gol) { %>
                                    <p style="color: #111d5e"> <%= ++GOL %> : <%=  %><span style="color: #23689b; font-size: 0.9em"><%= gol %></span></p>
                               <% }); %>

                               <p class="viewLabel " style="font-size: 1.2em;">Instructions Strategies List:</p>
                               <% var ISL=0; %>
                               <% Plan.InstructionsStrategiesList.forEach(function(gol) { %>
                                    <p style="color: #111d5e"> <%= ++ISL %> : <%=  %><span style="color: #23689b; font-size: 0.9em"><%= gol %></span></p>
                               <% }); %>

                               <p class="viewLabel " style="font-size: 1.2em;">Asesments Method List:</p>
                               <% var AML=0; %>
                               <% Plan.AsesmentsMethodList.forEach(function(gol) { %>
                                    <p style="color: #111d5e"> <%= ++AML %> : <%=  %><span style="color: #23689b; font-size: 0.9em"><%= gol %></span></p>
                               <% }); %>

                               <p class="viewLabel " style="font-size: 1.2em;">Associative Activities List:</p>
                               <% var AAL=0; %>
                               <% Plan.AssociativeActivitiesList.forEach(function(gol) { %>
                                    <p style="color: #111d5e"> <%= ++AAL %> : <%=  %><span style="color: #23689b; font-size: 0.9em"><%= gol %></span></p>
                               <% }); %>

                               <p class="viewLabel " style="font-size: 1.2em;">Reflection List:</p>
                               <% var RL=0; %>
                               <% Plan.ReflectionList.forEach(function(gol) { %>
                                    <p style="color: #111d5e"> <%= ++RL %> : <%=  %><span style="color: #23689b; font-size: 0.9em"><%= gol %></span></p>
                               <% }); %>

                                <p class="viewLabel " style="font-size: 1.2em;">Start Date: <span style="color: #23689b; font-size: 0.9em"><%= Plan.StartDate %></span> </p>
                                <p class="viewLabel " style="font-size: 1.2em;">End Date: <span style="color: #23689b; font-size: 0.9em"><%= Plan.EndDate %></span> </p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </section>


<%- include("../../patials/footer/endFooter.ejs") %>
