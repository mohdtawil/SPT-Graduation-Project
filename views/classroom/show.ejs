<%- include("../../patials/header/firstHeader.ejs") %>
<title>SPT | View Class</title>
<%- include("../../patials/header/styleHeader.ejs") %>
<%- include("../../patials/header/endHeader.ejs") %>
<%- include("../../patials/header/navHeader.ejs") %>
<br><br>
    <section id="Title">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="row justify-content-center">
                        <div class="col-md-9  text-center">
                            <p class="title"><%= singleClass.name %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="Refresh">
        <div class="container">
            <div class="row">
                <div class="col-10 p-0 d-flex justify-content-end">
                    <a class="reff" href="/refresh/class/<%= singleClass._id %>" title="Refresh for update student list for registred courses in this classroom">Refresh <i class="fa fa-refresh"></i></a>
                </div>
            </div>
        </div>
    </section>
    <section id="AddToList">
        <div class="container">
            <div class="row m-0 justify-content-center">
                <div class="col-lg-9 col-md-10 col-12">
                    <h5 class="addtolistLabel">Please.. Add Course To <%= singleClass.name %></h5>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            Courses List
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <% if(! allCourses.length == 0) { %>
                            <% allCourses.forEach(function(Course) { %>
                                <li><a class="dropdown-item" href="/add/class/<%= singleClass._id %>/course/<%= Course._id %>"> <%= Course.name %> </a></li>
                            <% }); %>
                        <% } else { %>
                                <li class="dropdown-item">Course list is empty</li>
                        <% } %>
                        </ul>
                    </div>
                    <br>
                    <h5 class="addtolistLabel">Please.. Add Student To <%= singleClass.name %></h5>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                            Students List
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <% if(! allStudents.length == 0) { %>
                            <% allStudents.forEach(function(Student) { %>
                                <li><a class="dropdown-item" href="/add/class/<%= singleClass._id %>/student/<%= Student._id %>"><%= Student.name %> - <%= Student.ssn %></a></li>
                            <% }); %>
                        <% } else { %>
                                <li class="dropdown-item">Student list is empty</li>
                        <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="View">
        <div class="container">
            <div class="row m-0">
                <div class="col-12 mt-5">
                    <div class="row justify-content-center">
                    <% if(! singleClass.CcoursesListID.length == 0 ) { %>
                        <% singleClass.CcoursesListID.forEach(function(Course) { %>
                            <div class="col-lg-4 col-md-6 col-12  mt-3">
                                <div class="viewContainer px-3 py-2 pb-3 text-center">
                                    <p class="viewLabel mb-4" style="font-size: 1.3em"> Course: <%= Course.name %></p>
                                    <a href="/view/course/<%= Course._id %>" class="viewButton py-2 px-3">View Course</a>
                                    <div class=" d-flex justify-content-end">
                                        <a href="/delete/class/<%= singleClass._id %>/course/<%= Course._id %>" class="" style="color: #FFF"><i class="fa fa-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-md-6 col-12  mt-2">
                            <div class="viewContainer p-2 text-center">
                                <p class="viewLabel " >The Class <%= singleClass.name %> Doesn't Have Any Course.</p>
                            </div>
                        </div>
                    <% } %>
                    </div>
                </div>
                <div class="col-12 my-3">
                    <hr>
                </div>
                <div class="col-12 mt-2">
                    <div class="row justify-content-center">
                    <% if(! singleClass.CstudentsListID.length == 0 ) { %>
                        <% singleClass.CstudentsListID.forEach(function(Student) { %>
                            <div class="col-lg-4 col-md-6 col-12  mt-3">
                                <div class="viewContainer px-3 py-2 pb-3 text-center">
                                    <p class="viewLabel mb-4" style="font-size: 1.3em"> Student: <%= Student.name %></p>
                                    <a href="/view/student/<%= Student._id %>" class="viewButton py-2 px-3">View Student</a>
                                    <div class=" d-flex justify-content-end">
                                        <a href="/delete/class/<%= singleClass._id %>/student/<%= Student._id %>" class="" style="color: #FFF"><i class="fa fa-trash"></i></a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-md-6 col-12  mt-2">
                            <div class="viewContainer p-2 text-center">
                                <p class="viewLabel " >The Class <%= singleClass.name %> Doesn't Have Any Student.</p>
                            </div>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>


<%- include("../../patials/footer/endFooter.ejs") %>
