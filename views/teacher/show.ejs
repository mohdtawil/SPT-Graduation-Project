<%- include("../../patials/header/firstHeader.ejs") %>
<title>SPT | View Teacher</title>
<%- include("../../patials/header/styleHeader.ejs") %>
<%- include("../../patials/header/endHeader.ejs") %>
<%- include("../../patials/header/navHeader.ejs") %>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<section id="User">
    <div class="conatiner">
        <div class="row m-0 justify-content-end">
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-5 col-7 px-xl-4 px-lg-3 px-md-2 mt-md-1 mt-2">
                <a href="/user/<%= currentUser._id %>/reset-password">
                    <div class="user p-1">
                        <div class="userContainer">
                            <div class="img">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQKUQokFXVpMXRJ_o4V-_9k0oSHE57r1JHhwxw4wX6aUNZbdZfe8sr5v0tbfqmMf_y3KbI&usqp=CAU" class="userImage" alt="">
                            </div>
                            <div class="text">
                                <p class="userName d-inline">Reset Password</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
<section id="User">
    <div class="conatiner">
        <div class="row m-0 justify-content-end">
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-5 col-7 px-xl-4 px-lg-3 px-md-2 mt-md-1 mt-2">
                <a href="/edit/teacher/<%= currentUser._id %>">
                    <div class="user p-1">
                        <div class="userContainer">
                            <div class="img">
                                <img src="https://cdn3.iconfinder.com/data/icons/social-messaging-ui-color-line/254000/168-512.png" class="userImage" alt="">
                            </div>
                            <div class="text">
                                <p class="userName d-inline">Edit Information</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
    <section id="Title">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="row justify-content-center">
                        <div class="col-md-9  text-center">
                            <p class="title"><%= singleTeacher.name %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="View">
        <div class="container">
            <div class="row m-0">
                <div class="col-12 mt-2">
                    <div class="row justify-content-center">
                        <div class="col-lg-9 text-left">
                            <p class="viewLabel " style="font-size: 1.5em; color: rgb(0, 0, 0)">Personal Information:</p>
                            <hr>
                            <p style="font-size: 1.5em;">
                            <span style="color: #23689b; font-size: 0.9em;"> <i class="material-icons" style="font-size:30px; color:#000">account_circle</i><span style="color:#000"> Name: </span><%= singleTeacher.name %></span>
                            <br>
                            <span style="color: #23689b; font-size: 0.9em"><i class="material-icons" style="font-size:30px; color:#000">picture_in_picture</i><span style="color:#000"> SSN:</span> <%= singleTeacher.ssn %></span>
                            <br>
                            <span style="color: #23689b; font-size: 0.9em"><i class="material-icons" style="font-size:30px; color:#000">credit_card</i><span style="color:#000"> Ministerial: </span><%= singleTeacher.ministerialNum %></span>
                            <br>
                            <span style="color: #23689b; font-size: 0.9em"><i class="material-icons" style="font-size:30px; color:#000">settings_phone</i> <span style="color:#000">Phone:</span> <%= singleTeacher.phoneNum %></span>
                            </p>
                            <hr>
                            <p class="viewLabel " style="font-size: 1.2em; color:#000">Register In Courses
                                <% if(!singleTeacher.CourseList.length == 0 ) { %>
                                    <% singleTeacher.CourseList.forEach(function(Course) { %>
                                        <br>
                                        <span style="color: #23689b; font-size: 0.9em"><%= Course.name %></span>
                                    <% }); %>
                                <% } else { %>
                                    <br>
                                    <span style="color: #23689b; font-size: 0.7em"><%= singleTeacher.name %> Doesn't Register In Any Course Yet..! </span>
                                <% } %>
                             </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


<%- include("../../patials/footer/endFooter.ejs") %>
