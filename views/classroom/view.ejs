<%- include("../../patials/header/firstHeader.ejs") %>
<title>SPT | All Classes</title>
<%- include("../../patials/header/styleHeader.ejs") %>
<%- include("../../patials/header/endHeader.ejs") %>
<%- include("../../patials/header/navHeader.ejs") %>
    <section id="User">
        <div class="conatiner">
            <div class="row m-0 justify-content-end">
                <div class="col-xl-3 col-lg-4 col-md-4 col-sm-5 col-7 px-xl-4 px-lg-3 px-md-2 mt-md-1 mt-2">
                    <a href="/insert/class" >
                        <div class="user p-1">
                            <div class="userContainer">
                                <div class="img">
                                    <i class="material-icons" style="font-size:39px; color: #fff">add_circle_outline</i>                                </div>
                                <div class="text">
                                    <p class="userName d-inline"> Insert New Class</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="Title">
        <div class="container">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md-7 col-sm-8 col-9 text-center">
                            <p class="title">All Classes</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="View">
        <div class="container">
            <div class="row m-0">
                <div class="col-12 mt-5">
                    <div class="row justify-content-center">
                        <% allClasses.forEach(function(Class) { %>
                            <div class="col-lg-4 col-md-6 col-12  mt-3">
                                <div class="viewContainer p-4 pb-2 text-center">
                                    <p class="viewLabel mb-5 text-center" style="font-size: 1.2em"><%= Class.name %> </p>
                                    <a href="/view/class/<%= Class._id %>" class="viewButton">View Details</a>
                                    <div class=" d-flex mt-4 justify-content-end">
                                        <a href="/edit/class/<%= Class._id %>" title="Edit" class="viewIcon"><i class="far fa-edit"></i></a>
                                        <form class="mb-0" action="/delete/class/<%= Class._id %>?_method=DELETE" method="POST">
                                            <button type="submit" title="Delete" class="viewIcon"><i class="fa fa-trash"></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </section>


<%- include("../../patials/footer/endFooter.ejs") %>
